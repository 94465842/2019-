<view class="container">
	<view class="section panel">
	  <text class="section_title">工作时长(分钟)</text>
	  <view class="section_body">
	    <slider 
	    	bindchange="changeWorkTime" 
	    	show-value="true" 
	    	min="1"
	    	max="60"
	    	value="{{workTime}}"
	    	left-icon="cancel" 
	    	right-icon="success_no_circle"/>
	  </view>
	</view>

	<view class="section panel">
	  <text class="section_title">休息时长(分钟)</text>
	  <view class="section_body">
	    <slider 
	    	bindchange="changeRestTime" 
	    	show-value="true" 
	    	min="5"
	    	max="60"
	    	value="{{restTime}}"
	    	left-icon="cancel" 
	    	right-icon="success_no_circle"/>
	  </view>
	</view>

	<view class="section panel">
	  <view class="section_title">
	  	<text>主页背景</text>
	  </view>
	  <view class="section_body">
	  	<navigator url='../ima/ima'>	<text bindtab="" class="section_tip">选择背景 > </text></navigator>
	  </view>
	</view>

	<view class="section panel">
	  <view class="section_title">

	  	<text>选择音乐</text>
	  </view>
	  <view class="section_body">
    <navigator url='../lingsheng/lingsheng'>	<text bindtab="" class="section_tip">音乐选择 > </text></navigator>
    </view>
 
	</view>

  	<view class="section panel">
	  <view class="section_title">
	  	<text>任务记录</text>
	  </view>
    <view class="section_body">
    <navigator url='../logs/logs'>	<text bindtab="" class="section_tip">查看记录 > </text></navigator>
    </view>
	</view>



</view>